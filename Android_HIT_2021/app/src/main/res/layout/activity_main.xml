<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/edtValue"
                android:paddingTop="50dp"
                android:paddingLeft="16dp"
                android:text="Value Input"
                android:textColor="#717070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/tvResult"
                android:text="Result"
                android:textColor="#878686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:weightSum="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btClear"
                android:text="C"
                android:textSize="40sp"
                android:textColor="#FF9800"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btFirst"
                android:text="()"
                android:textSize="40sp"
                android:textColor="#4CAF50"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btDu"
                android:text="%"
                android:textSize="40sp"
                android:textColor="#4CAF50"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btChia"
                android:text="/"
                android:textSize="40sp"
                android:textColor="#4CAF50"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt7"
                android:text="7"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt8"
                android:text="8"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt9"
                android:text="9"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btNhan"
                android:text="x"
                android:textSize="40sp"
                android:textColor="#4CAF50"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt4"
                android:text="4"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt5"
                android:text="5"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt6"
                android:text="6"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btTru"
                android:text="-"
                android:textSize="40sp"
                android:textColor="#4CAF50"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt1"
                android:text="1"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt2"
                android:text="2"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt3"
                android:text="3"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btCong"
                android:text="+"
                android:textSize="40sp"
                android:textColor="#4CAF50"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btXoa"
                android:text="AC"
                android:textSize="30sp"
                android:textColor="#F44336"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/bt0"
                android:text="0"
                android:textSize="40sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:backgroundTint="#111"
                android:id="@+id/btPhay"
                android:text=","
                android:textSize="40sp"
                android:textColor="#FFC107"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>

            <Button
                android:id="@+id/btBang"
                android:text="="
                android:textSize="40sp"
                android:textColor="#FFF"
                android:backgroundTint="#038708"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="ButtonCheck"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
